<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper  namespace="com.ucar.datalink.biz.dal.LabDAO">

    <resultMap id="labResult" type="lab">
        <result property="id" column="id"/>
        <result property="labName" column="lab_name"/>
        <result property="labDesc" column="lab_desc"/>
        <result property="ipRule" column="ip_rule"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
        <result property="dataSource" column="data_source"/>
        <result property="dbIpPort" column="db_ip_port"/>
    </resultMap>

    <!-- all columns -->
    <sql id="allColumns">id,lab_name,lab_desc,ip_rule,create_time,modify_time,data_source,db_ip_port</sql>

    <select id="findLabList" resultMap="labResult">
        select
        <include refid="allColumns"/>
        from t_dl_lab
    </select>

    <select id="getLabById" resultMap="labResult">
        select
        <include refid="allColumns"/>
        from t_dl_lab where id=#{id}
    </select>

    <select id="getLabByName" resultMap="labResult">
        select
        <include refid="allColumns"/>
        from t_dl_lab where lab_name=#{labName}
    </select>

    <select id="getLabByDataSource" resultMap="labResult">
        select
        <include refid="allColumns"/>
        from t_dl_lab where data_source = #{dataSource}
    </select>

    <insert id="insert" parameterType="lab" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_dl_lab
        (lab_name,lab_desc,ip_rule,create_time,modify_time)
        VALUES
        (#{labName}, #{labDesc},#{ipRule}, now(), now())
    </insert>

    <delete id="delete" parameterType="long">
        delete from t_dl_lab where id = #{id}
    </delete>

    <update id="update" parameterType="com.ucar.datalink.domain.group.GroupInfo">
        update t_dl_lab
        set
        lab_name=#{labName},
        lab_desc=#{labDesc},
        ip_rule=#{ipRule},
        modify_time = now()
        where id = #{id}
    </update>

    <update id="updateCenterLab" parameterType="lab">
        update t_dl_lab
        set
        modify_time = now()
        where lab_name = #{labName}
    </update>

    <select id="labCount" resultType="Integer">
        SELECT
        COUNT(1)
        FROM t_dl_lab
    </select>

</mapper>